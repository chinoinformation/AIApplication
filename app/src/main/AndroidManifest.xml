<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mitake.aiapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".start.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".start.MenuActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.TranslucentBackground" />
        <activity
            android:name=".home.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".character.CharacterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".home.IntentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".quest.QuestActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".quest.MainQuestActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".quest.TutorialActivity"
            android:screenOrientation="portrait" />

        <service android:name=".bgm.MyService" />

        <activity
            android:name=".battle.BattleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".quest.PracticeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".battle.BattleFinishActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".start.OpeningActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".start.OpeningStoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".tutorial.TutorialStoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".home.SettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".quest.StoryActivity"
            android:screenOrientation="portrait"
            />

    </application>

</manifest>