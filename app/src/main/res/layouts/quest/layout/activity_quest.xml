<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".quest.QuestActivity">

    <HorizontalScrollView
        android:id="@+id/background_quest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/background_quest" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.099"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.747">

                <com.example.mitake.aiapplication.custom_layout.PushImageButton
                    android:id="@+id/background_quest_home"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:background="@null"
                    android:src="@drawable/background_quest_home"
                    android:soundEffectsEnabled="false"/>

                <TextView
                    android:id="@+id/text_quest_home"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/background_quest_home"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_off_background"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/home"
                    android:textColor="@color/colorIcon" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.439"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.342">

                <com.example.mitake.aiapplication.custom_layout.PushImageButton
                    android:id="@+id/background_quest_battle"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/background_quest_battle"
                    android:soundEffectsEnabled="false"/>

                <TextView
                    android:id="@+id/text_quest_main"
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/background_quest_battle"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_off_background"
                    android:gravity="center"
                    android:text="@string/main_quest"
                    android:textColor="@color/colorIcon"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.047"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.484">

                <com.example.mitake.aiapplication.custom_layout.PushImageButton
                    android:id="@+id/background_quest_tutorial"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/background_quest_tutorial"
                    android:soundEffectsEnabled="false"/>

                <TextView
                    android:id="@+id/text_quest_tutorial"
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/background_quest_tutorial"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_off_background"
                    android:gravity="center"
                    android:text="@string/tutorial"
                    android:textColor="@color/colorIcon"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.892"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.293">

                <com.example.mitake.aiapplication.custom_layout.PushImageButton
                    android:id="@+id/background_quest_pvp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:background="@null"
                    android:src="@drawable/background_quest_pvp"
                    android:soundEffectsEnabled="false"/>

                <TextView
                    android:id="@+id/text_quest_pvp"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/background_quest_pvp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_off_background"
                    android:gravity="center"
                    android:text="@string/pvp"
                    android:textColor="@color/colorIcon"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.306"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.921">

                <com.example.mitake.aiapplication.custom_layout.PushImageButton
                    android:id="@+id/background_quest_dojo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/background_quest_dojo"
                    android:soundEffectsEnabled="false"/>

                <TextView
                    android:id="@+id/text_quest_dojo"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/background_quest_dojo"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_off_background"
                    android:gravity="center"
                    android:text="@string/dojo"
                    android:textColor="@color/colorIcon"
                    android:textStyle="bold" />

            </RelativeLayout>

        </android.support.constraint.ConstraintLayout>

    </HorizontalScrollView>

    <ImageView
        android:id="@+id/map_start"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/map_end"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>