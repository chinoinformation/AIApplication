<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quest.TutorialStoryActivity">

    <ImageView
        android:id="@+id/background_story"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_opening_story"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/talker_image1"
        android:layout_width="220dp"
        android:layout_height="360dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.393" />

    <ImageView
        android:id="@+id/talker_image2"
        android:layout_width="140dp"
        android:layout_height="360dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/talker_image1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.393" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/images_story"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/talker"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@drawable/frame_design"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:visibility="invisible"/>

        <com.example.mitake.aiapplication.custom_layout.start.CharByCharTextView
            android:id="@+id/customTextView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/text_design"
            android:padding="20dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:visibility="invisible"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/end"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/text_end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <com.lightfire.gradienttextcolor.GradientTextView
        android:id="@+id/tutorial_story_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/drawable_quest_type"
        android:visibility="invisible"
        android:gravity="center"
        android:padding="4dp"
        android:shadowColor="#ff4500"
        android:shadowDx="1.5"
        android:shadowDy="1.5"
        android:shadowRadius="1.5"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold"
        app:gradientEnd="#ff4500"
        app:gradientStart="#fffaf0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>