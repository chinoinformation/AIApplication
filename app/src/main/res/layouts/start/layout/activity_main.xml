<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/start_layout"
    tools:context=".start.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.lightfire.gradienttextcolor.GradientTextView
            android:id="@+id/load_text"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:shadowColor="#ff4500"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="1.5"
            android:text="@string/load"
            android:textSize="32sp"
            android:textStyle="bold"
            app:gradientEnd="#ff4500"
            app:gradientStart="#fffaf0"
             />

        <com.example.mitake.aiapplication.custom_layout.PushButton
            android:id="@+id/menu"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:background="@drawable/button_off_background"
            android:gravity="center"
            android:text="@string/menu"
            android:textColor="#000000"
            android:soundEffectsEnabled="false" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>