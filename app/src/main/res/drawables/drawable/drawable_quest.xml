<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>

            <!-- 背景色 -->
            <solid android:color="#d3d3d3" />

            <!-- 角の丸み -->
            <corners android:radius="6dp" />

            <!-- 枠線 width:線の幅、color:線の色 -->
            <stroke
                android:width="2dp"
                android:color="#ff0000" />
        </shape>
    </item>
</selector>

